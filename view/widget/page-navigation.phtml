<nav aria-label="Page navigation">
    <ul class="pagination">
        <?php if (! isset($pages->previous)) : ?>
            <li class="disabled"><a href="#" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a></li>
        <?php else : ?>
            <li><a href="<?= $this->url('default', [
                    'resource' => 'question',
